{
  "alias": "api.firstmeanseverything.com",
  "name": "fme-api",
  "version": 2,
  "env": {
    "JWT_PASSPHRASE": "@fme-jwt-passphrase",
    "POSTMARK_KEY": "@fme-postmark-key",
    "STRIPE_KEY": "@fme-stripe-key"
  },
  "builds": [
    {
      "src": "graphql/index.js",
      "use": "@now/node@canary"
    },
    {
      "src": "handlers/**/*.js",
      "use": "@now/node@canary"
    }
  ],

  "routes": [
    {
      "src": "/competitions",
      "dest": "handlers/competitions.js",
      "methods": ["GET"]
    },
    {
      "src": "/competitions/(?<id>[^/]+)",
      "dest": "handlers/competition.js?id=$id",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "graphql/index.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ]
}
