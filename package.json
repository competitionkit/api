{
  "name": "fme-graphql",
  "version": "1.0.0",
  "description": "GraphQL API for First Means Everything",
  "main": "src/index.js",
  "scripts": {
    "deploy": "now --public && now alias",
    "dev": "npm-run-all --parallel start playground",
    "now-start": "node src",
    "playground": "graphql playground",
    "start": "nodemon -e node -r dotenv/config src"
  },
  "author": "Jonathan Steele",
  "license": "MIT",
  "dependencies": {
    "apollo-errors": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "dataloader": "^1.4.0",
    "graphql-yoga": "^1.6.1",
    "jsonwebtoken": "^8.3.0",
    "lodash.keyby": "^4.6.0",
    "mongoose": "^5.0.11",
    "validator": "^10.7.1"
  },
  "devDependencies": {
    "dotenv": "^6.0.0",
    "graphql-cli": "^2.16.5",
    "husky": "^1.0.0-rc.6",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "now": {
    "alias": "fme-graphql.now.sh",
    "dotenv": true,
    "env": {
      "NODE_ENV": "production"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
